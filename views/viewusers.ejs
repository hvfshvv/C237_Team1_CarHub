<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Car Hub</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/inventory">Car Hub</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/inventory">View Cars</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/addCar">Add Car</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/viewusers">View Users</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

<div class="container">
  <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
  <br>
  <div class="text-center"><h2>Users from Car Hub</h2></div>
  <br>
  <div class="mb-3">
    <input type="text" id="searchInput" class="form-control" placeholder="Search Users">
  </div>
  <table class="table table-hover small text-center" id="usersTable">
    <thead>
      <tr>
        <th width="100">Username</th>
        <th width="100">Email</th>
        <th width="50">Role</th>
        <th width="50">Address</th>
        <th width="50">Contact</th>
        <th width="50">Edit</th>
        <th width="50">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= users[i].username %></td>
          <td><%= users[i].email %></td>
          <td><%= users[i].role %></td>
          <td><%= users[i].address %></td>
          <td><%= users[i].contact %></td>
          <td><a href="/updateUsers/<%= users[i].userId %>">Edit</a></td>
          <td><a href="/deleteUsers/<%= users[i].userId %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>